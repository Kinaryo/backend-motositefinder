<% layout('layouts/app') %>
<div class="container">
    <h1 class="text-center mt-5">Add Motor</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/pages" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" name="motor[title]" id="title">
                </div>
        
                <div class="mb-3">
                    <label for="licensePlate" class="form-label">License Plate</label>
                    <input type="text" class="form-control" name="motor[licensePlate]">
                </div>
        
                <div class="mb-3">
                    <label for="model" class="form-label">Model</label>
                    <input type="text" class="form-control" name="motor[model]">
                </div>
        
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea  id="description" class="form-control" name="motor[description]"></textarea>
                </div>
        
                <div class="mb-3">
                    <label for="dateTime" class="form-label">Date - Time</label>
                    <input type="datetime-local" class="form-control" name="motor[dateTime]" id="dateTime">
                </div>
        
                <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input type="text" class="form-control" name="motor[image]">
                </div>
        
                <div class="mb-3">
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
